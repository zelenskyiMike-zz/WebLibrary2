@using WebLibrary2.Domain.Models
@model GetAuthorLiteratureVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@{Html.EnableClientValidation();}
@{Html.EnableUnobtrusiveJavaScript();}
@using (Html.BeginForm())
{
    <div class="form-horizontal">

        <div class="form-row">
            <div class="col">
                <p>Выберите книги,что бы удалить их для этого автора</p>
                @foreach (var item in Model.Books)
                {
                    <input type="checkbox" name="bookIDsForDelete" value="@item.BookID">
                    @Html.DisplayFor(modelItem => item.BookName)<br />
                }
            </div>
            <div class="col">
                <p>Выберите книги,что бы добавить их для этого автора</p>
                @Html.ListBox("booksIDsForInsert", ViewData["Books"] as MultiSelectList, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>


        <div class="form-row">
            <div class="col-md-offset-2 col-md-10">
                <br />
                <input type="submit" value="Подтвердить" class="btn btn-light" />
                @Html.ActionLink("Назад к списку", "AuthorView", "Author", null, new { @class = "btn btn-light" })
            </div>
        </div>
    </div>
}
