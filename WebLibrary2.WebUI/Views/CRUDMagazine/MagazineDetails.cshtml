@using WebLibrary2.Domain.Models
@model GetM2MCRUDMagazineVM
@{
    ViewBag.Title = "MagazineDetails";
}
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.MagazineName)</dt>
        <dd>@Html.DisplayFor(model => model.MagazineName)</dd>

        <dt>@Html.DisplayNameFor(model => model.MagazineGenreName)</dt>
        <dd>@Html.DisplayFor(model => model.MagazineGenreName)</dd>
        <dt>
            Authors
        </dt>
        @foreach (var author in Model.Authors)
        {
            <dd>
                @author.AuthorName
            </dd>
        }
    </dl>
</div>

<div class="btn btn-default">@Html.ActionLink("Назад к списку", "Index", "Home")</div>


