@using WebLibrary2.ViewModelsLayer.ViewModels;
@model GetAllBooksView

<h2>Details</h2>


<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.BookName)</dt>
        <dd>@Html.DisplayFor(model => model.BookName)</dd>

        <dt>@Html.DisplayNameFor(model => model.GenreName)</dt>
        <dd>@Html.DisplayFor(model => model.GenreName)</dd>
        <dt>
            Authors
        </dt>
        @foreach (var author in Model.Authors)
        {
            <dd>
                @author.AuthorName
            </dd>
        }
    </dl>
</div>

<button>@Html.ActionLink("Назад к списку", "Index", "Home", null, new { @class = "btn" })</button>


