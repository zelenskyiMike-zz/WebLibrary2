@using WebLibrary2.Domain.Models
@model GetAuthorBookVM
@{
    ViewBag.Title = "AddRelations";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<h2>AddRelations</h2>
<div class="form-group">

    @Html.HiddenFor(model => model.BookID)

    @Html.LabelFor(model => model.AuthorID, "AuthorID", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">

        @Html.DropDownListFor(model => model.AuthorID, ViewBag.Authors as SelectList, htmlAttributes: new { @class = "form-control" })


        @Html.ValidationMessageFor(model => model.AuthorID, "", new { @class = "text-danger" })
    </div>
    <input type="submit" value="Сохранить изменения" class="btn btn-default" />
</div>
}
