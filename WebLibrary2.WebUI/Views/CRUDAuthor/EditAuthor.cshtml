@using WebLibrary2.Domain.Models
@model GetM2MCRUDAuthorVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@{Html.EnableClientValidation();}
@{Html.EnableUnobtrusiveJavaScript();}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <div class="form-group">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AuthorID)


        @Html.LabelFor(model => model.AuthorName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.AuthorName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.AuthorName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="bs-popover">
        <ul id="myTabs" class="nav nav-tabs" role="tabpanel">
            <li role="presentation"><button class="btn btn-light active show" href="#books" role="tab" data-toggle="tab" aria-controls="home" aria-expanded="true" id="booksUpdate">Книги автора</button></li>
            <li role="presentation"><button class="btn btn-light" href="#articles" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile" aria-expanded="false">Статьи автора</button></li>
            <li role="presentation"><button class="btn btn-light" href="#magazines" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile" aria-expanded="false">Журналы автора</button></li>
            <li role="presentation"><button class="btn btn-light" href="#publications" role="tab" id="profile-tab" data-toggle="tab" aria-controls="profile" aria-expanded="false">Публикации автора</button></li>
        </ul>

        <div id="myTabContent" class="tab-content">
            <div role="tabpanel" class="tab-pane active " id="books" aria-labelledby="home-tab">@Html.Action("GetBooksOFAuthor", "AuthorActivity")</div>
            <div role="tabpanel" class="tab-pane fade" id="articles" aria-labelledby="profile-tab">@Html.Action("GetArticlesOfAuthor", "AuthorActivity")</div>
            <div role="tabpanel" class="tab-pane fade" id="magazines" aria-labelledby="profile-tab">Html.Action("GetBooksOFAuthor", "AuthorActivity")</div>
            <div role="tabpanel" class="tab-pane fade" id="publications" aria-labelledby="profile-tab">Html.Action("GetBooksOFAuthor", "AuthorActivity")</div>
        </div>
        <div id="strange"></div>
    </div>
    <div class="form-row">
        <div class="col-md-offset-2 col-md-10">
            <hr />
            <input type="submit" value="Cохранить" class="btn btn-light" />
            @Html.ActionLink("Назад к списку", "AuthorView", "Author", null, new { @class = "btn btn-light" })
        </div>
    </div>
</div>
}
